{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center">
        <table class="table-fixed max-w-2xl w-full bg-gray-800 border border-gray-700">
            <thead class="bg-gray-700">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Links
                </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
            {% for author in authors %}
                <tr class="text-gray-300 hover:bg-gray-700">
                    <td class="px-6 py-4 whitespace-nowrap">{{ author.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="{{ path('app_daily_quote_list_by_author', {'name': author.name}) }}"
                           class="text-blue-400 hover:text-blue-300">See quotes</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <span>Page {{ authors.currentPage }} of {{ authors.nbPages }}</span>
        <div class="mt-4 flex justify-center text-gray-300">
            {{ pagerfanta(authors) }}
        </div>
    </div>
{% endblock %}

{% block title %}Daily Quote - Authors{% endblock %}
