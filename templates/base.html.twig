<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-900 text-white">
<nav class="bg-gray-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
            <div class="flex space-x-4 items-center">
                <a href="{{ path('app_daily_quote_index') }}"
                   class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Daily Quote</a>
                <a href="{{ path('app_petyourpet_list') }}"
                   class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Pet Your Pet</a>
                <a href="{{ path('app_text_beautify_index') }}"
                   class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Text Beautify</a>
                <a href="{{ path('app_photoalbum_index') }}"
                   class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Photo Album</a>
            </div>
            <div class="flex items-center">
                {% if app.user %}
                    <span class="text-gray-300 px-3 py-2 text-sm font-medium">{{ app.user.email }}</span>
                    <a href="{{ path('app_logout') }}"
                       class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Logout</a>

                {% else %}
                    <a href="{{ path('app_login') }}"
                       class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Login</a>
                    <a href="{{ path('app_register') }}"
                       class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Register</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<div class="bg-gray-900 p-6 flex justify-center">
    {% block body %}{% endblock %}
</div>
</body>
</html>
