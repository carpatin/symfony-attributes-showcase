{% extends 'base.html.twig' %}

{% block title %}Outcome of text beautification{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-900 flex items-center justify-center p-6">
        <div class="flex flex-col gap-4">
            <div class="bg-gray-800 p-8 rounded-lg shadow-xl max-w-md w-full">
                <h1 class="text-2xl font-bold mb-6 text-white text-center">{{ outcome|raw }}</h1>
            </div>
            <div class="bg-gray-800 p-4 rounded-lg shadow-xl max-w-md w-full">
                <p class="text-sm text-white text-center">Applied beautifiers: {{ applied|join(', ') }}</p>
            </div>
        </div>
    </div>
{% endblock %}
